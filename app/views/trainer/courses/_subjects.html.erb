<div class="tab_panel_content">
<div class="tab_panel_text">
<% @course.course_subjects.each do |course_subject| %>
  <%= render partial: "trainer/course_subjects/change_status" , locals: {course_subject: course_subject } %>
  <div id="subject-<%=course_subject.id%>">
    <h1><%= link_to course_subject.subject.name, trainer_course_subject_path(@course,course_subject.subject)%></h1>
    <p><%= raw course_subject.subject.instruction %></p>
  </div>
  <hr>
<% end %>
</div>
</div>