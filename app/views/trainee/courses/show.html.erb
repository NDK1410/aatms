<div class="super_container">
    <div class="container">
      <div class="row">
            <div class="course_title"><%= @course.name %></div>
            <!-- Course Image -->
            <div class="course_image"><%= image_tag @course.image_url.to_s %></div>
            <div class="course_info"></div>
            <!-- Course Tabs -->
            <div class="course_tabs_container">
              <div class="tab_panels">
                <!-- Description -->
                <div class="tab_panel active">
                  <div class="tab_panel_title"></div>
                    <div class="tab_panel_content">
                      <div class="tab_panel_text">
                        <h3><%= @course.description %></h3>
                        <hr>
                        <%= render "subjects" %>
                      </div>
                    </div>
                  <button id="myBtn" data-toggle="modal" data-target="#myModal10">
                    <div class="course_info">
                      <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                      <span><%= @course.trainers.count + @course.trainees.count %><%= t(".member")%></span>
                    </div>
                  </button>
                  <div id="myModal10" class="modal">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <span class="close">&times;</span>
                        </div>
                        <div class="modal-body">
                          <%= render "trainers" %>
                          <hr>
                          <%= render "trainees" %>
                        </div>
                      </div>
                    </div>
                  </div>
              </div>
            </div>
      </div>
    </div>
</div>
